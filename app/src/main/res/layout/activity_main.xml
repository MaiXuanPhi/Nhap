<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/bt_baothuc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tạo báo thức" />

    <Button
        android:id="@+id/bt_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fragment"/>

    <Button
        android:id="@+id/bt_fragment_tablayout_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="fragment_tablayout_viewpager" />

    <Button
        android:id="@+id/bt_drawnavigation_tablayout_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="drawnavigation_tablayout_viewpager" />

    <Button
        android:id="@+id/bt_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notification" />
</LinearLayout>