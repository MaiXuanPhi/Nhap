    <Button
        android:id="@+id/btnYoutube"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Layout youtube"/>

    <Button
        android:id="@+id/bt_vantay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
